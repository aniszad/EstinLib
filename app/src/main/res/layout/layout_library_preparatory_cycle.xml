<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_1_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/btn_1CP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_year"
                android:gravity="start"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1cp_1semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semester_1"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/manrope_semi_bold"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/icon_drop_down_arrow"
                app:iconGravity="end"
                android:textSize="@dimen/_10ssp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_1cp_semester1"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1cp_2semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semester_2"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/manrope_semi_bold"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/icon_drop_down_arrow"
                app:iconGravity="end"
                android:textSize="@dimen/_10ssp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_1cp_semester2"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_4sdp"
                android:background="@drawable/gray_backg_with_radius"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_1_cp"
            >
            <TextView
                android:id="@+id/btn_2cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/second_year"
                android:gravity="start"
                android:fontFamily="@font/manrope_bold"
                android:paddingHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2cp_1semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semester_1"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/manrope_semi_bold"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/icon_drop_down_arrow"
                app:iconGravity="end"
                android:textSize="@dimen/_10ssp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_2cp_semester1"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2cp_2semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/semester_2"
                android:paddingHorizontal="@dimen/_16sdp"
                android:fontFamily="@font/manrope_semi_bold"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@drawable/icon_drop_down_arrow"
                app:iconGravity="end"
                android:textSize="@dimen/_10ssp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                android:id="@+id/rv_2cp_semester2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>