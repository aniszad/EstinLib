<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.az.elib.presentation.ui.activities.AuthActivity">


        <ViewFlipper
            android:id="@+id/vf_auth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >
            <include android:id="@+id/include_sign_in_layout" layout="@layout/sign_in_layout"/>
            <include android:id="@+id/include_sign_up_layout" layout="@layout/sign_up_layout"/>
            <include android:id="@+id/include_sign_up_final_layout" layout="@layout/sign_up_final_layout"/>
        </ViewFlipper>



</androidx.constraintlayout.widget.ConstraintLayout>