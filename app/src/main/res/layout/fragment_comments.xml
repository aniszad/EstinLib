<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/top_rounded_backg"
    app:cardBackgroundColor="@color/colorSecondaryDark"
    app:shapeAppearanceOverlay="@style/card_top_radius"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.dialogs.CommentsFragment">
        <TextView
            android:id="@+id/tv_comments_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comments"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comments"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_comments_title"
            app:layout_constraintBottom_toTopOf="@id/view_comment_separator"
            />
        <View
            android:id="@+id/view_comment_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextGray"
            app:layout_constraintTop_toBottomOf="@id/rv_comments"
            app:layout_constraintBottom_toTopOf="@id/til_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="0dp"
            app:hintEnabled="false"
            app:boxStrokeWidthFocused="0dp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTintMode="screen"
                android:paddingVertical="@dimen/_10sdp"
                android:fontFamily="@font/manrope_medium"
                android:backgroundTint="@color/colorSecondaryDark"
                android:textColor="@color/white"
                android:inputType="text"
                android:hint="@string/add_comment"
                android:textColorHint="@color/colorTextGray"
                android:importantForAutofill="no"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
